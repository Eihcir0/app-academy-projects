<form action= <%= users_url %> method="post">
  <input
  name="authenticity_token"
  type="hidden"
  value="<%= form_authenticity_token %>">

  <table>
    <tr>
      <td><label for="username">User Name:</label></td>
      <td><input type="text" name="user[username]" id: "username"/></td>
    </tr>
    <tr>
      <td><label for="password">Password:</label></td>
      <td><input type="password" name="user[password]" id: "password"/></td>
    </tr>
  </table>

  <input type = "hidden" name="user[session_token]" value= <%= @user.ensure_session_token %> />

  <input type="submit" value="Create User!">

  <% if flash[:errors] %>
  <p style="color:red">
    <% flash[:errors].each do |error| %>
    <%= error %><br>
    <% end %>
  </p>
  <% end %>
</form>
