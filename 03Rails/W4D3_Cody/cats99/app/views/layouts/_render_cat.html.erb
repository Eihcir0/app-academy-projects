<h3>
  Cat #<%= @cat.id %>: <%= link_to "#{@cat.name.capitalize}", cat_url(@cat) %>

  <small>
    <% if current_user.id == @cat.user_id %>
    <%= link_to "Edit", edit_cat_url(@cat) %>
    <% end %>
  </small>
</h3>

<table>
  <tr>
    <td>Color:</td><td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Age:</td><td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Gender:</td><td><%= @cat.sex %></td>
  </tr>
  <% unless @cat.description.nil? || @cat.description.empty? %>
    <tr>
      <td>About me:</td><td><%= @cat.description %></td>
    </tr>
  <% end %>
</table>
